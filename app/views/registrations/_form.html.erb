<%= semantic_form_for @registration do |f| %>
  <%= f.inputs do %>
    <%= f.input :name, :input_html => { :size => 24 } %>
    <%= f.input :phone, :input_html => { :size => 24 } %>
    <%= f.input :email, :input_html => { :size => 24 } %>
    <%= f.input :gender, :as => :radio, :collection => [:Male, :Female] %>
    <%= f.input :category,  :as => :select, :collection => Customer.pluck(:name) %>
    <%= f.input :address, :input_html => { :class => 'autogrow', :rows => 10, :cols => 20, :maxlength => 100  } %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input, :button_html => { :class => "primary", :disable_with => 'Wait...' } %>
  <% end %>
<% end %>
